package() {
	install -Dm644 "$srcdir"/sidebar_Example.qmd \
		"$pkgdir"/home/root/xovi/exthome/qt-resource-rebuilder/sidebar_Example.qmd

	install -Dm644 "$srcdir"/LICENSE.md \
		"$pkgdir"/home/root/.vellum/licenses/$pkgname/LICENSE
	echo "https://github.com/PepikVaio/reMarkable_Xovi_Example" > \
		"$pkgdir"/home/root/.vellum/licenses/$pkgname/SOURCES
}

