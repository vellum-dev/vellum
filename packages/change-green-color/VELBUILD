package() {
	install -Dm644 "$srcdir"/changeGreenColor.qmd \
		"$pkgdir"/home/root/xovi/exthome/qt-resource-rebuilder/changeGreenColor.qmd

	install -Dm644 "$srcdir"/LICENSE.md \
		"$pkgdir"/home/root/.vellum/licenses/$pkgname/LICENSE
	echo "https://github.com/ingatellent/xovi-qmd-extensions" > \
		"$pkgdir"/home/root/.vellum/licenses/$pkgname/SOURCES
}
