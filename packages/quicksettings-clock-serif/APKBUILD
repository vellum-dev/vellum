package() {
	install -Dm644 "$srcdir/quickSettingsClockSerif.qmd" \
		"$pkgdir/home/root/xovi/exthome/qt-resource-rebuilder/quickSettingsClockSerif.qmd"

	install -Dm644 "$srcdir/LICENSE" \
		"$pkgdir/home/root/.vellum/licenses/$pkgname/LICENSE"
