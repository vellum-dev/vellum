maintainer="Mitchell Scott <mitchell@scottlabs.io>"
pkgname=rm-stylus
pkgver=0.2.0
pkgrel=0
_upstream_author="rmitchellscott"
_category="utilities"
pkgdesc="Xovi extension that adds support for LAMY button"
url="https://github.com/rmitchellscott/rm-stylus"
arch="armv7"
license="MIT"
depends="xovi !rmpp !rmppm"
options="!check !fhs !strip !tracedeps"
source="
https://github.com/rmitchellscott/rm-stylus/releases/download/v"$pkgver"/rm-stylus.so
https://raw.githubusercontent.com/rmitchellscott/rm-stylus/main/LICENSE
"

package() {
	install -Dm755 "$srcdir"/rm-stylus.so \
		"$pkgdir"/home/root/xovi/extensions.d/rm-stylus.so

	install -Dm644 "$srcdir"/LICENSE \
		"$pkgdir"/home/root/.vellum/licenses/"$pkgname"/LICENSE
	echo "https://github.com/rmitchellscott/rm-stylus/archive/refs/tags/v"$pkgver".tar.gz" > \
		"$pkgdir"/home/root/.vellum/licenses/"$pkgname"/SOURCES
}
sha512sums="
